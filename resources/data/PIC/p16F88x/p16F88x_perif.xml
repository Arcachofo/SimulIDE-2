<parts>
    <port name="PORTA" pins="8" outreg="PORTA" dirreg="!TRISA"
                       clockpins="PORTA6,PORTA7" >
    </port>
    
    <port name="PORTB" pins="8" outreg="PORTB" dirreg="!TRISB" >
        <interrupt name="PB_INT" mask="11111111"/>
        <extint    name="INT" pin="PORTB0" configbits="INTEDG"/>
    </port>
    
    <port name="PORTC" pins="8" outreg="PORTC" dirreg="!TRISC">
    </port>
    
    <timer name="TIMER0" counter="TMR0" configregsA="OPTION">
        <prescaler values="2,4,8,16,32,64,128,256"/>
        <extclock type="PIN" source="PORTA4"/>
        <interrupt name="T0_OVF" />
    </timer>
    
    <timer name="TIMER1" counter="TMR1L,TMR1H" configregsA="T1CON">
        <prescaler values="1,2,4,8"/>
        <extclock type="PIN" source="PORTC0"/>
        <interrupt name="T1_OVF" />
    </timer>
    
    <timer name="TIMER2" counter="TMR2" configregsA="T2CON" configregsB="PR2">
        <prescaler values="1,4,16,16"/>
        <interrupt name="T2_MATCH" />
    </timer>
    
    <ccpunit name="CCP+1" type="00" pin="PORTC2" ccpreg="CCPR1L,CCPR1H" configregsA="CCP1CON">
        <interrupt name="CCP1" />
    </ccpunit>
    <ccpunit name="CCP2" type="00" pin="PORTC1" ccpreg="CCPR2L,CCPR2H" configregsA="CCP2CON">
        <interrupt name="CCP2" />
    </ccpunit>
    
    <usart name="USART0"  number="1" configregsA="TXSTA" configregsB="RCSTA">
        <trunit type="tx" pin="PORTC6" register="TXREG">
        </trunit>
        
        <trunit type="rx" pin="PORTC7" register="RCREG">
            <interrupt name="USART_R" />
        </trunit>
        <interrupt name="USART_T" />
    </usart>
    
    <vref name="Vref" configregsA="VRCON" pinout="PORTA2">
    </vref>
    
    <acomp name="COMP11" configregsA="CM1CON0"  configregsC="SRCON"
           pins="PORTA0,PORTA1,PORTB3,PORTB1,PORTA3,PORTA4">
        <interrupt name="ACOMP1" />
    </acomp>
    
    <acomp name="COMP12" configregsA="CM2CON0" configregsB="CM2CON1" configregsC="SRCON"
           pins="PORTA0,PORTA1,PORTB3,PORTB1,PORTA2,PORTA5">
        <interrupt name="ACOMP2" />
    </acomp>
</parts>
