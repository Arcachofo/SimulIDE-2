<!DOCTYPE SimulIDE>

<parts>
    <port name="PORTB" pins="6" outreg="PORTB" inreg="PINB" dirreg="DDRB"
        clockpins="PORTB3" resetpin="PORTB5">
        <interrupt name="PCINT0" mask="PCMSK"/>
        <extint    name="INT0" pin="PORTB2" configbits="ISC00,ISC01"/>
    </port>
    
    <timer name="TIMER0" type="800" counter="TCNT0" configregsA="TCCR0A" configregsB="TCCR0B">
        <prescaler select="CS10,CS11,CS12" values="0,1,8,64,256,1024,EXT_F,EXT_R"/>
        <extclock type="PIN" source="PORTB2"/>
        
        <ocunit name="OC0A" pin="PORTB0" ocreg="OCR0A" configbits="COM0A0,COM0A1">
            <interrupt name="T0COA" />
        </ocunit>
        
        <ocunit name="OC0B" pin="PORTB1" ocreg="OCR0B" configbits="COM0B0,COM0B1">
            <interrupt name="T0COB" />
        </ocunit>

        <interrupt name="T0_OVF" />
    </timer>
    
    <timer name="TIMER1" type="810" counter="TCNT1" configregsA="GTCCR" configregsB="TCCR1">
        <prescaler select="CS10,CS11,CS12,CS13" values="0,1,2,4,8,16,32,64,128,256,512,1024,2048,4096,8192,16384"/>
        
        <ocunit name="OC1A" pin="PORTB1" ocreg="OCR1AL,OCR1AH" configbits="COM1A0,COM1A1">
            <interrupt name="T1COA" />
        </ocunit>
        
        <ocunit name="OC1B" pin="PORTB4" ocreg="OCR1BL,OCR1BH" configbits="COM1B0,COM1B1">
            <interrupt name="T1COB" />
        </ocunit>
        
        <interrupt name="T1_OVF" />
    </timer>

    <adc name="ADC11" bits="10" dataregs="ADCL,ADCH" configregsA="ADCSRA" 
                    configregsB="ADCSRB" multiplex="ADMUX">
        <prescaler select="" values="2,2,4,8,16,32,64,128"/>
        <pins 
              inputs="PORTB5,PORTB2,PORTB4,PORTB3" 
              vref="PORTB0"/>
        <interrupt name="ADC" />
    </adc>
    
    <wdt name="WatchDog00" configregsA="WDTCR">
        <prescaler select="" values="512,256,128,64,32,16,8,4,2,1,1,1,1,1,1,1"/>
        <interrupt name="WDT" />
    </wdt>
    
    <eeprom name="EEPROM" dataregs="EEDR" addressreg="EEARL" configregsA="EECR">
        <interrupt name="EEPR" />
    </eeprom>
    
    <acomp name="Comp" configregsA="ACSR" configbitsB="AIN0D,AIN1D" pins="PORTB0,PORTB1">
        <interrupt name="ACOMP" />
    </acomp>
</parts>
