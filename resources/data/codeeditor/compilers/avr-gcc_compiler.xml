<!DOCTYPE SimulIDE>

<compiler name="Avr-gcc" useDevice="true" debugMode="avr-gcc">
    <step 
        command="avr-gcc"
        arguments=" -mmcu=$device -Wall -g -Os -o $fileDir$fileName.o $filePath"
    />
    <step 
        command="avr-gcc"
        arguments=" -mmcu=$device -g -Os -o $fileDir$fileName.elf $filePath"
    />
    <step 
        command="avr-objcopy"
        arguments=" -j .text -j .data -O ihex $fileDir$fileName.elf $fileDir$fileName.hex"
    />
</compiler>
