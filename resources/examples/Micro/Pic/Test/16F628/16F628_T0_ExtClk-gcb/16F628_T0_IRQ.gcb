#chip 16f628a, 4

On Interrupt Timer0Overflow Call IncCounter

CMCON = 7
TRISB = 0
PORTB = 0;
TRISA.4 = 1

OPTION_REG.T0CS = 1 'External Clock
;OPTION_REG = 0b10100000
;INTCON = 0b11100000
TMR0 = 250; 'Overflow in 5 cycles
 IntOn

Do  
    PORTB.5 = 0
    wait 500 ms
    PORTB.5 = 1
    wait 500 ms
Loop


Sub IncCounter
    if PORTB.0 = 1 then 
      PORTB.0 = 0
    else
      PORTB.0 = 1
    End if
    
    INTCON.T0IF = 0
    TMR0 = 250; 
End sub
